<% include ../partials/header.ejs %>
<main class="container">
    <h1 style="padding: 35px;">>Edit a User</h1>
    <div class="col-sm-4">
        <form method="post">
            <fieldset class="form-group">
                <label for="businessEmail">Business Email: *</label>
                <input name="businessEmail" type="email" class="form-control" required value="<%= contact.businessEmail %>" autofocus />
            </fieldset>
            <fieldset class="form-group">
                <label for="businessName">Username: *</label>
                <input name="businessName" type="text" class="form-control" required value="<%= contact.businessName %>" />
            </fieldset>
            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/contacts/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/contacts" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>
        </form>
    </div>

</main>
<% include ../partials/footer.ejs %>
